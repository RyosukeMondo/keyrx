{
  "name": "keyrx",
  "version": "0.1.0",
  "description": "KeyRx - Advanced keyboard remapping daemon",
  "private": true,
  "scripts": {
    "prepare": "husky || true"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "*.rs": [
      "cargo fmt --check --",
      "bash -c 'cargo clippy --all-targets -- -D warnings'"
    ],
    "keyrx_ui/**/*.{ts,tsx,js,jsx}": [
      "prettier --check",
      "eslint"
    ]
  }
}
