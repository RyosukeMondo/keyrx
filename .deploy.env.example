# Windows Deployment Configuration
# Copy this file to .deploy.env and customize for your environment
# Then source it before running deploy_windows.sh:
#   source .deploy.env && ./scripts/deploy_windows.sh

# Windows client SSH connection
WINDOWS_CLIENT_HOST=192.168.1.100
WINDOWS_CLIENT_USER=developer

# Deployment directory on Windows PC
DEPLOY_DIR=C:/keyrx_deploy

# Build options
BUILD_IN_VM=true        # true = use Vagrant VM, false = cross-compile on Linux
USE_RSYNC=false         # true = use rsync, false = use scp
RUN_INSTALLER=false     # true = run installer after deployment
